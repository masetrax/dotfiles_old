# APPEARANCE
borderwidth 1
color activeborder "#a3be8c"
color menubg "#2b303b"
color menufg "#65737e"
color font "#a3be8c"
color selfont "#a3be8c"
gap 10 10 10 10

# STICKY MODE
sticky yes

# KEY BINDINGS
bind-key M-Return 	window-exec
bind-key CMS-r 		restart
bind-key CMS-q		quit
bind-key CM-Return 	"urxvt"
bind-key CM-p		"rofi -show run -hide-scrollbar"
bind-key CM-f		window-fullscreen
bind-key CM-m		window-maximize
bind-key CM-v		window-vtile
bind-key CM-b		window-htile
bind-key CM-c		"urxvt -e grdc -s 10"

# APPLICATION MENU
command " Term" urxvt
command " WWW" firefox
command " IRC" "urxvt -e weechat"
command " Torrents " transmission-gtk
command " Music " "urxvt -e cmus"
command " Clock" "urxvt -e grdc -s 10"

# AUTOGROUPING
autogroup 2 Firefox
autogroup 3 Hexchat
autogroup 4 Transmission-gtk
autogroup 9 "xconsole", "XConsole"

# APPEARANCE
borderwidth 4
color activeborder "#81a1c1"
color menubg "#3b4252"
color menufg "#81a1c1"
color font "#d8dee9"
color selfont "#3b4252"
fontname "Terminus:size=9:bold"
gap 15 15 15 15

# STICKY MODE
sticky yes

# KEY BINDINGS
bind-key M-Return 	window-exec
bind-key 4S-c		window-delete
bind-key 4S-r 		restart
bind-key 4S-q		quit
bind-key 4S-Return 	"st"
bind-key 4-p		"dmenu_run"
bind-key 4-w		"firefox"
bind-key 4S-f		window-fullscreen
bind-key 4S-m		window-maximize
bind-key 4S-v		window-vtile
bind-key 4S-b		window-htile

# APPLICATION MENU
command " ---------- " blank
command " Term" urxvt
command " WWW" firefox
command " File Mgr" "st -e ranger"
command " IRC" "st -e weechat"
command " Torrents " transmission-gtk
command " Music " "st -e cmus"
command " ----------" blank

# AUTOGROUPING
autogroup 2 Firefox
autogroup 3 Hexchat
autogroup 4 Transmission-gtk
autogroup 9 "xconsole", "XConsole"

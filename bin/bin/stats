#!/bin/sh

FG='#81a1c1'
BG='#3B4252'
FONT='Terminus:size=9'
WIDTH='700'
HEIGHT='30'

Version(){
	vers=$(uname -rs)
	echo os/$vers
}

Clock(){
	clk=$(date "+%r")
	echo time/$clk
}

Date(){
	dte=$(date "+%a %b %d")
	echo date/$dte
}

Packages(){
	pkg=$(pkg_info -q | wc -l | awk '{$1=$1};1')
	echo "pkg/$pkg"
}

Volume(){
	mute=$(mixerctl -a |grep outputs.master.mute= | cut -d'=' -f2)
	vol=$((`mixerctl -n outputs.master|cut -f 1 -d ','`*100/255))
	if [ "$mute" = "on" ]; then
		echo "vol/mute"
	else
		echo "vol/$vol%"
	fi
	#echo "vol/$vol%"
}

BattStat(){
	battery=`apm -l`
	battcharge=`apm -a`
	if [ $battcharge -eq 1 ]; then
		echo "ac/${battery}%"
	elif [ $battery -eq 100 ]; then
		echo "batt/${battery}%"
	elif [ $battery -le 25 ]; then
		echo "batt/${battery}%"
	else
		echo "batt/${battery}%"
	fi
}


while true; do
	sleep 1
	echo "$(Version)    $(Packages)    $(Volume)    $(BattStat)    $(Date)    $(Clock)" 
done | dzen2 -p -fn $FONT  -bg $BG -fg $FG -w $WIDTH -h $HEIGHT -y 0 -x 820 -e 'button2=;'
